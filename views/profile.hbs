<h3>Profile</h3>

<div class="row">
  <div class="col s6">
    {{#if user.avatarUrl}}
    <img class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
    {{else}}
    <img class="avatar" src="/assets/noProfile.png" alt="avatar-{{user.name}}">
    <p>To set a profile, press the button "select a profile"</p>
    {{/if}}

  </div>

  <div class="col s6">
    <form action="/profile" method="POST" enctype="multipart/form-data">
      <p>Email: <strong>{{ user.email }}</strong></p>

      <div class="input-field">
        <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
        <label for="name">Name</label>
        <span class="helper-text" data-error="Имя не может быть пустым"></span>
      </div>

      <div class="input-field">
        <input id="surname" name="surname" type="text" class="validate" required value="{{user.surname}}">
        <label for="name">Surname</label>
        <span class="helper-text" data-error="Имя не может быть пустым"></span>
      </div>

      <div class="file-field input-field">
        <div class="btn">
          <span>Select a profile</span>
          <input type="file" name="avatar">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">

      <button type="submit" class="btn">Submit</button>

    </form>
  </div>
</div>